<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<contentHaul xmlns:a="http://www.appian.com/ae/types/2009">
    <rule>
        <name>createGridColumnForID</name>
        <uuid>_a-0000d7c5-bedd-8000-9728-010000010000_3660</uuid>
        <description>This will either create a TextColumn or a LinkColumn</description>
        <parentUuid>_a-0000d7c5-bedd-8000-9728-010000010000_1493</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>=
if(
 and(ri!label = &quot;ID&quot;, not(isnull(ri!data))),

 #&quot;SYSTEM_SYSRULES_gridLinkColumn&quot;(
   label: ri!label,
   field: ri!field,
   data: apply('type!{http://www.appian.com/ae/types/2009}ProcessTaskLink'(task:_, label:&quot;Open Task&quot;), ri!data),
   alignment: ri!alignment
  )
  ,
  #&quot;SYSTEM_SYSRULES_gridLinkColumn&quot;(
    label: ri!label,
    field: ri!field,
    data: ri!data,
    alignment: ri!alignment
  )
)</definition>
        <namedTypedValue>
            <name>label</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>field</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>data</name>
            <type>
                <name>Variant</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>alignment</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <preferredEditor>legacy</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
